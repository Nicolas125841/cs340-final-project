<div class='flex justify-center items-center'>
  <div class='w-1/3 bg-white p-6 rounded-lg shadow-lg'>
    <div class='w-full items-center justify-center flex mb-6'>
      <h1 class='font-bold text-2xl'>Register</h1>
    </div>
    <form action="" method="post">
      <div>
        <p>{{message}}</p>
      </div>
      <div class="mb-4">
        <label for="username" class="block text-gray-700 text-sm font-bold mb-2">
          Enter your username:
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="username" id="username" type="text" placeholder="Username" required>
      </div>
      <div class="mb-4">
        <label for="name" class="block text-gray-700 text-sm font-bold mb-2">
          Enter your name:
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="name" id="name" type="text" placeholder="Your Name" required>
      </div>
      <div class='flex justify-center'>
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit" value="Register">Register</button>
      </div>
    </form>
    <div class='text-center'>
      <a class="text-black font-bold py-2 px-4 rounded" href="/user/login">Login</a>
    </div>
  </div>  
</div>
