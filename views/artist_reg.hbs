<div class='flex justify-center items-center'>
  <div class='w-1/3 bg-white p-6 rounded-lg shadow-lg'>
    <div class="w-full mb-5">
      <a class="text-blue-500" href="/user">User Home</a>
      <span> | </span>
      <a class="text-blue-500" href="/artist">Artist Home</a>
      <span> | </span>
      <a class="text-blue-500" href="/track">Tracks</a>
      <span> | </span>
      <a class="text-blue-500" href="/playlist">Playlists</a>
    </div>
    <div class='w-full items-center justify-center flex mb-6'>
      <h1 class='font-bold text-2xl'>Register</h1>
    </div>
    <form action="" method="post">
      <div>
        <p>{{message}}</p>
      </div>
      <div class="mb-4">
        <label for="name" class="block text-gray-700 text-sm font-bold mb-2">
          Enter your name:
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="name" id="name" type="text" maxlength="20" placeholder="Name" required>
      </div>
      <div class="mb-4">
        <label for="producer" class="block text-gray-700 text-sm font-bold mb-2">
          Who is your producer? (optional):
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="producer" id="producer" type="text" maxlength="20" placeholder="Producer">
      </div>
      <div class='flex justify-center mb-5'>
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit" value="Register">Register</button>
      </div>
    </form>
    <div class='text-center'>
      <a href="/artist/login">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit" value="Login">
          Login
        </button>
      </a>
    </div>
  </div>  
</div>
