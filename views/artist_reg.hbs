<h1>Register</h1>
<form action="/artist/register" method="post">
  <div>
    <p>{{message}}</p>
  </div>
  <div>
    <label for="name">Enter your name:</label>
    <input type="text" name="name" id="name" required />
  </div>
  <div>
    <label for="name">Who is your producer? (optional):</label>
    <input type="text" name="producer" id="producer" />
  </div>
  <div>
    <input type="submit" value="Register" />
  </div>
</form>
<div>
  <a href="/artist/login">Login</a>
</div>