<form action="/playlist/{{playlist_id}}/add" method="post">
  <h3 class='font-bold text-2xl' >Add tracks to playlist</h3>
  <fieldset class="mb-5">
    <p class="text-lg font-medium text-gray-700">Tracks</p>
    {{#each tracks}}
      <div>
        <input type="checkbox" id="{{title}}" name="titles" value="{{title}},{{artist_id}}" />
        <label for="{{title}}">{{title}} by {{artist_name}}</label>
      </div>
    {{/each}}
  </fieldset>
  <div>
    <button type="submit" value="Update" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" >Add</button>
  </div>
</form>