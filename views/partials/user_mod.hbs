<div class='flex flex-col justify-center items-center relative'>
  <form action="/user" method="post">
    <h3 class='font-bold text-2xl' >Update account details</h3>
    <div class='w-full p-4 flex flex-col'>
      <div class='flex flex-col w-full items-start'>
        <div class='flex flex-col justify-between items-center mb-5 w-full'>
          <label for="name">New username:</label>
          <input type="text" name="username" id="username" />
        </div>
        <div class='flex flex-col justify-between items-center mb-5 w-full'>
          <label for="name">New name:</label>
          <input type="text" name="name" id="name" />
        </div>
      </div>  
      <div>
        <button type="submit" value="Update" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Update</button>
      </div>
    </form>
  </div>
  <form action="/user/remove" method="post">
      <button type="submit" value="Remove Account" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:bg-red-400 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800">Remove Account</button>
  </form>
</div>