<div class='p-8'>
  <h3 class='font-bold text-2xl' >Your Playlists</h3>
  {{#each playlists}}
    <div class='flex justify-center items-center relative'>
      <a class='font-bold' href="/playlist/{{playlist_id}}">
        <button class='text-white font-bold py-2 px-4 rounded bg-slate-600 mt-4' >
          {{name}}
        </button>
      </a>
    </div>
  {{/each}}
</div>