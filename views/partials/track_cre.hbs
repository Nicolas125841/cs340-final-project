<div class='flex justify-center items-center relative'>
  <form action="/track/create" method="post">
    <div class='flex flex-col justify-center items-center'>
      <h3 class='font-bold text-2xl' >Create Track</h3>
      <div class='flex flex-row items-center text-center space-x-5 mt-5 mb-5'>
        <label for="title" class="block text-lg font-medium text-gray-700">Title:</label>
        <input type="text" name="title" id="title" required class="rounded mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
      </div>
      <div class='flex flex-row items-center text-center space-x-5 mt-5 mb-5'>
        <label for="genre" class="block text-lg font-medium text-gray-700">Genre:</label>
        <input type="text" name="genre" id="genre" required class="rounded mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
      </div>
      <div class='flex flex-row items-center text-center space-x-5 mt-5 mb-5'>
        <label for="length" class="block text-lg font-medium text-gray-700">Length:</label>
        <input type="number" name="length" id="length" required class="rounded mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
      </div>
      <fieldset class='w-full flex flex-row space-x-3 justify-center mb-5'>
        <p>Explicit?</p>
        <div>
          <input type="radio" id="false" name="is_explicit" value="0" checked />
          <label for="false">No</label>
        </div>
        <div>
          <input type="radio" id="true" name="is_explicit" value="1" />
          <label for="true">Yes</label>
        </div>
      </fieldset>
      <div>
        <button type="submit" value="Create" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" >Create</button>
      </div>
    </div>
  </form>
</div>