<div class='flex justify-center items-center relative'>
  <form action="/track/delete" method="post">
    <h3 class='font-bold text-2xl mb-3'>Delete track</h3>
    <fieldset class='mb-4'>
      <h4 class='text-xl text-center flex flex-col w-full mb-2'>Your tracks:</h4>
      {{#each tracks}}
        <div class='w-full justify-start flex flex-row space-x-2 items-center'>
          <input type="radio" id="{{title}}" name="title" value="{{title}}" />
          <label for="{{title}}">{{title}}</label>
        </div>
      {{/each}}
    </fieldset>
    <div>
      <button type="submit" value="Delete" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:bg-red-400 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800" >Delete</button>
    </div>
  </form>
</div>